      "id":"blog_hero",
      "elType":"section",
      "settings":{
        "background_color":"#020617",
        "padding":{"unit":"px","top":"80","bottom":"60"}
      },
      "elements":[
        {
          "id":"blog_col",
          "elType":"column",
          "settings":{"_column_size":100},
