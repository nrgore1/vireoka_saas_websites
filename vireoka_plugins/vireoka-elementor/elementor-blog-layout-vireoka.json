        }
      ]
    },
    {
      "id":"blog_posts",
      "elType":"section",
      "settings":{
        "background_color":"#020617",
        "padding":{"unit":"px","top":"40","bottom":"40"}
      },
      "elements":[
        {
          "id":"blog_posts_col",
          "elType":"column",
          "settings":{"_column_size":100},
          "elements":[
            {
              "id":"blog_loop",
              "elType":"widget",
              "widgetType":"posts",
              "settings":{
                "_skin":"skin-classic",
                "columns":3,
                "image_size":"medium",
                "title_color":"#F9FAFB",
